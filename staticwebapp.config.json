{
  "routes": [
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*"]
  },
  "mimeTypes": {
    ".json": "text/json"
  },
  "globalHeaders": {
    "cache-control": "must-revalidate, max-age=6000"
  },
  "responseOverrides": {
    "400": {
      "rewrite": "/custom-400.html"
    },
    "401": {
      "statusCode": 302,
      "redirect": "/login"
    },
    "403": {
      "rewrite": "/custom-403.html"
    },
    "404": {
      "rewrite": "/custom-404.html"
    }
  }
}